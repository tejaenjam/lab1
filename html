        <script>
                function validate2() {
                        var x = document.getElementById("c").value;
                        var atposition = x.indexOf("@");
                        var dotposition = x.lastIndexOf(".");
                        if (atposition < 1 || dotposition < atposition + 2 || dotposition + 2 > x.lenght) {
                                document.getElementById("result2").innerHTML = "invalid";
                        }
                        else {
                                document.getElementById("result2").innerHTML = "valid";
                        }
                }

                function validate() {
                        var x = document.getElementById("a").value;

                        if (x.length < 6) {
                                document.getElementById("result").innerHTML = "invalid";
                        }
                        else {
                                document.getElementById("result").innerHTML = "valid";
                        }
                }
                function validate1() {
                        var x = document.getElementById("b").value;

                        if (x.length < 6) {
                                document.getElementById("result1").innerHTML = "invalid";
                        }
                        else {
                                document.getElementById("result1").innerHTML = "valid";
                        }
                        
          }
          function validate3() {
                        var x = document.getElementById("d").value;
                        var re = /([a-z][A-Z]){6,}/;
                        if (x.length > 6 || x.match(re)) {
                                document.getElementById("result3").innerHTML = "valid";
                        }
                        else {
                                document.getElementById("result3").innerHTML = "invalid";
                        }
                }

        </script>

